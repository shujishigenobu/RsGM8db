<% data = @orf_model.send(experiment) %>

<% exdata = samples.map{|s| data.send(s)} %>

<% maxv = [exdata.map{|e| (e * 1.1).to_i}, 10].flatten.max %>

<%= image_tag Gchart.bar(
        :data => exdata,
	:bar_width_and_spacing => [20, 20],
	:size => '600x150',
	:axis_with_labels => 'x,y',
	:axis_labels => [ samples.map{|s| sample_label[s]}.join('|'), "0|#{maxv}"],
	:max_value => maxv,
	:title => "#{title} (cpm)"
	) %>